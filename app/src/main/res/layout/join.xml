<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/mycolor"
        >

        <Button
            android:id="@+id/backBtn_to_login"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:textColor="@color/background"
            android:background="#00000000"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:text="&lt;"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textColor="@color/background"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="JOIN"/>

    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:rowCount="5"
        android:columnCount="3">

        <TextView
            android:layout_row="0"
            android:layout_column="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:text="이름"/>

        <EditText
            android:id="@+id/userName"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="fill_horizontal"
            android:hint="홍길동"/>



        <TextView
            android:layout_row="1"
            android:layout_column="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:text="아이디"/>

        <EditText
            android:id="@+id/userId"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:background="@drawable/edit"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:hint="hong1234"/>

        <Button
            android:id="@+id/idChkBtn"
            android:onClick="idChk"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="중복확인"/>


        <TextView
            android:layout_row="2"
            android:layout_column="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:text="비밀번호"/>

        <EditText
            android:id="@+id/userPw"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:background="@drawable/edit"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:textSize="20sp"
            android:hint="*****"/>

        <TextView
            android:layout_row="3"
            android:layout_column="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:text="일치확인"/>

        <EditText
            android:id="@+id/userPwChk"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:background="@drawable/edit"
            android:layout_row="3"
            android:layout_column="1"
            android:inputType="textPassword"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:hint="*****"/>
        <Button
            android:id="@+id/pwChkBtn"
            android:onClick="pwChk"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="확인"/>

        <TextView
            android:layout_row="4"
            android:layout_column="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:text="전화번호"/>

        <EditText
            android:id="@+id/userTel"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
        android:textAlignment="center"
        android:background="@drawable/edit"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:hint="010-0000-0000"/>

        <Button
            android:id="@+id/verifyBtn"
            android:onClick="verifyT"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="인증"/>

    </GridLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <Button
            android:textColor="@color/background"
            android:background="@color/mycolor"
            android:textSize="18sp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="50dp"
            android:id="@+id/joinBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"/>

        <Button
            android:id="@+id/cancelBtn"
            android:background="@color/mycolor"
            android:textColor="@color/background"
            android:textSize="18sp"
            android:layout_toRightOf="@id/joinBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"/>


    </RelativeLayout>

</LinearLayout>